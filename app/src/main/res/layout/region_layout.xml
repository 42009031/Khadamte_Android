<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/lang_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:src="@drawable/city_language" />

    <LinearLayout
        android:id="@+id/country_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/lang_btn"
        android:layout_margin="20dp"
        android:background="@drawable/city_country"
        android:gravity="center">

        <Spinner
            android:id="@+id/countr_sp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/city_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/country_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/city_drop"
        android:gravity="center">

        <Spinner
            android:id="@+id/city_sp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null" />
    </LinearLayout>
    
    <Button
        android:id="@+id/show_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="35dp"
        android:text="@string/show_offices"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@drawable/city_btn"
        android:layout_below="@+id/city_layout"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_btn"
        android:layout_alignParentBottom="true"
        android:src="@drawable/city_image"
        android:layout_marginTop="30dp"/>
</RelativeLayout>