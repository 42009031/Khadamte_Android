<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#cc0000">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/maids_name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="19sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/maids_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/empty" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/maids_img"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/desc_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/description"
                android:textColor="#cc0000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc_title_tv"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:text="adsadasdasdasdasd"
                android:textSize="17sp" />

            <View
                android:id="@+id/desc_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/desc_tv"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc_view"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/price_img"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_price"
                    android:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/price"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/price_val_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="150 DK"
                    android:textColor="#e65c00"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/price_View"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/price_layout"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/age_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_View"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ageView2"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_age"
                    android:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/age"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/age_val_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="15 years old"
                    android:textColor="#e65c00"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/age_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/age_layout"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/nationality_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_view"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/nationalityView2"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/nationality"
                     />

                <TextView
                    android:id="@+id/nationality_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/nationality"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/nationality_val_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Egyptian."
                    android:textColor="#e65c00"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/nationality_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/nationality_layout"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/religion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nationality_view"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/religionView2"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_age"
                    android:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/religion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/religion"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/religion_val_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Muslim."
                    android:textColor="#e65c00"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/religion_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/religion_layout"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#cccccc" />

            <LinearLayout
                android:id="@+id/owner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/religion_view"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ownerView"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_age"
                    android:tint="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/owner_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/owner"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/owner_val_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Ahmed Dawoud."
                    android:textColor="#e65c00"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:id="@+id/owner_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/owner_layout"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#cccccc" />


            <ListView
                android:id="@+id/phones_lv"
                tools:listitem="@layout/phones_office_row_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/owner_view" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>