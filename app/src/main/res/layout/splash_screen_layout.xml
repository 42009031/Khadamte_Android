<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg">

    <ImageView
        android:id="@+id/logo_imgview"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:paddingLeft="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/mynewlogo" />

    <ImageView
        android:id="@+id/eng_logo_imgview"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/logo_title_eng"
        android:layout_below="@+id/logo_imgview"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ar_logo_imgview"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo_title_ar"
        android:layout_below="@+id/eng_logo_imgview"
        android:layout_centerHorizontal="true"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannar_ad_id"
        />


</RelativeLayout>