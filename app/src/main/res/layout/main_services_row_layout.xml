<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/office_bg">

            <ImageView
                android:id="@+id/serv_imgview"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:src="@drawable/logo2"
                android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            android:background="@drawable/office_bg_red">

            <TextView
                android:id="@+id/serv_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <LinearLayout
                android:id="@+id/phone1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/phone1_imgView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    android:src="@drawable/serv_call"
                    android:gravity="center" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/serv_mob1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>